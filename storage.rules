rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para fotos de candidatos
    match /candidates/{candidateId}/{allPaths=**} {
      // Solo usuarios autenticados pueden leer y escribir
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Reglas para fotos de estudiantes
    match /students/{studentId}/{allPaths=**} {
      // Solo usuarios autenticados pueden leer y escribir
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Reglas para comprobantes de pago
    match /payment-receipts/{studentId}/{allPaths=**} {
      // Solo usuarios autenticados pueden leer y escribir
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && (request.resource.contentType.matches('image/.*') 
                       || request.resource.contentType == 'application/pdf');
    }
    
    // Denegar todo lo demÃ¡s
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

